{
  "name": "easy-tracker",
  "version": "1.0.0",
  "description": "Daily workout tracking web application",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:server": "node server/dev.js",
    "dev:client": "vite client --port 5173",
    "build": "pnpm run build:client && pnpm run db:generate && pnpm run db:push && pnpm run db:seed",
    "build:client": "vite build client",
    "preview": "vite preview client",
    "db:generate": "prisma generate",
    "db:generate:dev": "prisma generate --schema=prisma/schema.dev.prisma",
    "db:push": "prisma db push",
    "db:push:dev": "prisma db push --schema=prisma/schema.dev.prisma",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "db:setup:dev": "pnpm run db:generate:dev && pnpm run db:push:dev && pnpm run db:seed",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "prisma": "^5.10.0",
    "vite": "^5.1.0",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  }
}

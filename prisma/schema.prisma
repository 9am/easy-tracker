generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("EASY_TRACKER_PRISMA_DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  email      String    @unique
  name       String?
  avatarUrl  String?
  provider   String    @default("google")
  providerId String
  role       String    @default("user")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  routines   Routine[]
  sets       Set[]

  @@index([providerId])
}

model Routine {
  id           String     @id @default(cuid())
  userId       String
  name         String
  displayOrder Int        @default(0)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises    Exercise[]

  @@index([userId])
}

model Exercise {
  id                   String              @id @default(cuid())
  routineId            String
  predefinedExerciseId String?
  customName           String?
  displayOrder         Int                 @default(0)
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  routine              Routine             @relation(fields: [routineId], references: [id], onDelete: Cascade)
  predefinedExercise   PredefinedExercise? @relation(fields: [predefinedExerciseId], references: [id])
  sets                 Set[]

  @@index([routineId])
  @@index([predefinedExerciseId])
}

model Set {
  id         String   @id @default(cuid())
  exerciseId String
  userId     String
  reps       Int
  note       String?
  loggedAt   DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([exerciseId])
  @@index([userId])
  @@index([loggedAt])
}

model MuscleGroup {
  id                  String               @id @default(cuid())
  name                String               @unique
  predefinedExercises PredefinedExercise[]
}

model PredefinedExercise {
  id            String      @id @default(cuid())
  muscleGroupId String
  name          String
  muscleGroup   MuscleGroup @relation(fields: [muscleGroupId], references: [id], onDelete: Cascade)
  exercises     Exercise[]

  @@unique([muscleGroupId, name])
  @@index([muscleGroupId])
}
